<div class="row">

  <div class="col-sm-4">
    <div class="column-padding">
      <div>
        <h3><%= @user.company_name %></h3>
        <p>
          <i class="fas fa-map-marker-alt"></i>
          <%= @user.address %>
        </p>
        <p>
          <i class="fas fa-envelope"></i>
          <%= @user.email %>
        </p>
      </div>
      <div class="text-center">

        <button type="button" class="btn-carat-regular" data-toggle="modal" data-target="#uploadModal"> UPLOAD CSV </button> <%= render "upload_modal" %>

        <button type="button" class="btn-carat-go">
          <%= link_to "Go now", employees_path %>
        </button>

      </div>
      <hr>
  <!--   need to have different views here for login or not login-->
      <div>
        <!-- Button trigger modal -->
        <h3>Employees List <button type="button" class="btn-carat-add" data-toggle="modal" data-target="#addModal"> + </button> <%= render "add_modal" %></h3>



        <div id="employee-list">

          <% @employees.each do |e| %>
            <%= render 'employee_card', e: e %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <div class="col-sm-8">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>

</div>

<button id="init-map" class="hide">
  map
</button>

<script>
  <% if current_user.employees.where.not(latitude: nil).first %>
    <% @route = Route.new(current_user) %>
    setTimeout(_ => {
      window.map.drawRoute({
        origin: 'Ipanema, WeWork',
        // origin: <%= raw(@route.origin.to_json) %>,
        // destination: 'Ipanema, WeWork',
        destination: <%= raw(@route.origin.to_json) %>,
        waypoints: <%= raw(@route.waypoints.to_json) %>,
        travelMode: 'driving',
        strokeColor: '#131540',
        strokeOpacity: 0.6,
        optimizeWaypoints: true,
        strokeWeight: 6
      });
    }, 2000)
  <% end %>
</script>
