function refreshForm() {
  const newEmployeeName = document.getElementById('employee_name');
  const newEmployeeAddress = document.getElementById('employee_address');
  newEmployeeName.value = "";
  newEmployeeAddress.value = "";
}

function updateEmployee(employeeHTML) {
  const employeeList = document.getElementById('employee-list');
  const employee = document.getElementById('<%= @employee.id %>');
  employee.parentNode.removeChild(employee);
  employeeList.insertAdjacentHTML('beforeend', employeeHTML);
}

var closeBtn = document.getElementById('close<%= @employee.id %>')

<% if @employee.errors.any? %>

  console.log("error")
<% else %>
  <% @e = @employee %>
  updateEmployee('<%= j render "employee_card", e: @e %>');
  closeBtn.click()
  refreshForm();
  // refreshForm();
<% end %>
