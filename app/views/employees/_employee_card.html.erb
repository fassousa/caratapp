<div class="employee-card" id="<%= @e.id %>">
  <div>
    <div class="employee-name"><%= @e.name %></div>
    <div class="employee-address"><%= @e.address %></div>
  </div>

  <div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target='<%= "#editModal#{@e.id}" %>'> Edit employee </button>
    <%= render "edit_modal", e: @e %>
  </div>
</div>
