function refreshForm() {
  const newEmployeeName = document.getElementById('employee_name');
  const newEmployeeAddress = document.getElementById('employee_address');
  newEmployeeName.value = "";
  newEmployeeAddress.value = "";
}

function addEmployee(employeeHTML) {
  const employeeList = document.getElementById('employee-list');
  employeeList.insertAdjacentHTML('beforeend', employeeHTML);
}

var closeBtn = document.getElementById('close-button')

<% if @employee.errors.any? %>

  console.log("error")
<% else %>
  addEmployee('<%= j render "employee_card", e: @employee %>');
  closeBtn.click()
  refreshForm();
  // refreshForm();
<% end %>
