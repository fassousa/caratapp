<div class="row">

  <div class="col-sm-4">
    <div class="column-padding">
      <div>
        <h3><%= @user.company_name %></h3>
        <p>
          <i class="fas fa-map-marker-alt"></i>
          <%= @user.address %>
        </p>
        <p>
          <i class="fas fa-envelope"></i>
          <%= @user.email %>
        </p>
      </div>
      <div class="text-center">
        <button type="button" class="btn-carat-regular">UPLOAD CSV</button>
          <%= form_for @employee, url: { controller: 'employees', action: 'parse', method: :post } do |f| %>
          <div class="form-group">
            <%= f.file_field :csv_file, class: 'form-control' %>
            <%= f.submit :submit, class: 'form-control' %>
          </div>
          <% end %>
        <button type="button" class="btn-carat-add" data-toggle="modal" data-target="#addModal"> ADD MANUALLY </button> <%= render "add_modal" %>
      </div>
      <hr>
  <!--   need to have different views here for login or not login-->
      <div>
        <!-- Button trigger modal -->
        <div id="employee-list">
          <h3>Employees List</h3>
          <% @employees.each do |e| %>
            <% @e = e %>
            <%= render 'employee_card', e: @e %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <div class="col-sm-8">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>

</div>












