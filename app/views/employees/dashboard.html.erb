<div class="row">
  <div class="col-sm-4">
    <div>
      <h3><%= @user.company_name %></h3>
      <p><%= @user.address %></p>
      <p><%= @user.email %></p>
    </div>

    <div>
      <a class=“btn-carat-blue text-center”>Upload CSV</a>
    </div>

<!--   need to have different views here for login or not login
 -->
    <div>
      <p><strong>Or</strong></p>
    </div>

    <div>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal"> Add employee </button> <%= render "add_modal" %>
    </div>

    <div>
      <div id="employee-list">
        <p><strong>Your employees</strong></p>
        <% @employees.each do |e| %>
          <% @e = e %>
          <%= render 'employee_card', e: @e %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-8">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>
</div>


