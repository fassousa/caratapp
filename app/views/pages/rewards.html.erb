<div class="container content-padding bottom-padding">
  <div class="card-reward text-center">
    <div class="icon-space">
      <div class="icon-circle">
        <%= image_tag "piggy-bank.svg", class:"icons text-center" %>
      </div>
    </div>

    <h3 class="text-center title">Your Savings with Carat</h3>
    <div class="savings">
      <div class="wrapper-summary">

        <div class="row">
          <div class="col-xs-6">
            <h4 class="text-left">Public Transportation (per year)</h4>
          </div>

          <div class="col-xs-6">
            <h3 class="text-right">R$ 56.019,60</h3>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6">
            <h4 class="text-left">Carat Private Buses</h4>
          </div>

          <div class="col-xs-6">
            <h3 class="text-right">R$ 44.616,60</h3>
          </div>
        </div>

        <div class="row">
          <div class="wrapper-savings">
            <div class="col-xs-6">
              <h4 class="text-left"><strong>You Saved</strong></h4>
            </div>

            <div class="col-xs-6">
              <h3 class="text-right">R$ 11.403,00</h3>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="wrapper-order">
    <div class="row">
      <div class="col-sm-12 col-md-3 visible-md-block visible-lg-block">
        <h4><strong>Order Details</strong></h4>
        <p><%= current_user.company_name %></p>
      </div>

      <div class="col-sm-12 col-md-3 text-center visible-md-block visible-lg-block">
        <h4><strong>Order Number</strong></h4>
        <p>DRF0R4</p>
      </div>

      <div class="col-sm-12 col-md-3 text-center visible-md-block visible-lg-block">
        <h4><strong>Payment Type</strong></h4>
        <p>Monthly</p>
      </div>

      <div class="col-sm-12 col-md-3 text-right">
        <h4><strong>TOTAL</strong></h4>
        <p>R$ 3.718,05</p>
      </div>
    </div>
  </div>

  <div>
    <%= link_to "PROCEED TO ORDER", orders_new_path, class: "btn-carat-go text-center" %>
  </div>
</div>
